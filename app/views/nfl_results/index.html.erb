<div class="page-header">
  <h1>
    Pick-Em Generator

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Week</th>
        <th>Type</th>
        <th>Game 1</th>
        <th>Game 2</th>
        <th>Game 3</th>
        <th>Game 4</th>
        <th>Game 5</th>
        <th>Game 6</th>
        <th>Game 7</th>
        <th>Game 8</th>
        <th>Game 9</th>
        <th>Game 10</th>
        <th>Game 11</th>
        <th>Game 12</th>
        <th>Game 13</th>
        <th>Game 14</th>
        <th>Game 15</th>
        <th>Game 16</th>
      </tr>

      <% @result.each do |result| %>
      <% puts result %>
      <% week = result.shift %>
      <% home = result.shift %>
      <% away = result.shift %>
      <% result = result.shift %>
        <tr>
          <td><%= week %></td>
          <td>Home</td>
          <% home.each do |item| %>
          <td><%= item %></td>
          <% end %>
        </tr>
        <tr>
          <td><%= week %></td>
          <td>Away</td>
          <% away.each do |item| %>
          <td><%= item %></td>
          <% end %>
        </tr>
        <tr>
          <td><%= week %></td>
          <td>Result</td>
        <% result.each do |item| %>
          <td><%= item %></td>
        <% end %>
        </tr>
        <tr>
          <td><%= week %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
